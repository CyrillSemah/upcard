  <div class="space-x-4">
    <%= link_to "Créer mon invitation", new_user_registration_path, class: "px-6 py-2 bg-emerald-600 text-white rounded-md hover:bg-emerald-700 transition-colors duration-200" %>
    <%= link_to "Découvrir les modèles", "#", class: "px-6 py-2 border border-emerald-600 text-emerald-600 rounded-md hover:bg-emerald-700 hover:text-white transition-colors duration-200" %>
